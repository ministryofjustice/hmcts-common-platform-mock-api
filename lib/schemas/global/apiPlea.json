{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/external/apiPlea.json",
  "description": "The plea entered at a hearing",
  "type": "object",
  "properties": {
    "originatingHearingId": {
      "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/uuid"
    },
    "delegatedPowers": {
      "$ref": "../../external/global/apiDelegatedPowers.json"
    },
    "offenceId": {
      "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/uuid"
    },
    "pleaDate": {
      "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/datePattern"
    },
    "pleaValue": {
      "type": "string",
      "enum": [
        "GUILTY",
        "NOT_GUILTY"
      ]
    }
  },
  "required": [
    "originatingHearingId",
    "offenceId",
    "pleaDate",
    "pleaValue"
  ],
  "additionalProperties": false
}
