{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/external/apiNextHearingDefendant.json",
  "type": "object",
  "description": "A next hearing defendant is a defendant that is requested to be listed in an adjourned hearing",
  "properties": {
    "id": {
      "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/uuid"
    },
    "offences": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiNextHearingOffence.json#"
      }
    }
  },
  "required": [
    "id",
    "offences"
  ],
  "additionalProperties": false
}
