{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/external/apiHearing.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/uuid"
    },
    "jurisdictionType": {
      "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/jurisdictionType"
    },
    "reportingRestrictionReason": {
      "type": "string"
    },
    "courtCentre": {
      "$ref": "../../external/global/apiCourtCentre.json#"
    },
    "hearingLanguage": {
      "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/hearingLanguage"
    },
    "prosecutionCases": {
      "description": "The collection of cases to be heard or the case for a linked application with respect to an application hearing",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiProsecutionCase.json#"
      }
    },
    "defendantJudicialResults": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiDefendantJudicialResult.json"
      }
    },
    "hasSharedResults": {
      "description": "Indicates that the hearing has at least one result shared",
      "type": "boolean"
    },
    "courtApplications": {
      "description": "The collection of applications to be heard with respect to an application hearing or the applications for a case with respect to a hearing related to the case",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiCourtApplication.json#"
      }
    },
    "defendantReferralReasons": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiReferralReason.json#"
      }
    },
    "hearingCaseNotes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiHearingCaseNote.json#"
      }
    },
    "type": {
      "$ref": "../../external/global/apiHearingType.json#"
    },
    "hearingDays": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiHearingDay.json#"
      }
    },
    "judiciary": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiJudicialRole.json#"
      }
    },
    "applicantCounsels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiApplicantCounsel.json#"
      }
    },
    "respondentCounsels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiRespondentCounsel.json#"
      }
    },
    "prosecutionCounsels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiProsecutionCounsel.json#"
      }
    },
    "defenceCounsels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiDefenceCounsel.json#"
      }
    },
    "applicationPartyCounsels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiCourtApplicationPartyCounsel.json#"
      }
    },
    "defendantAttendance": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiDefendantAttendance.json#"
      }
    },
    "defendantHearingYouthMarkers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiDefendantHearingYouthMarker.json#"
      }
    },
    "courtApplicationPartyAttendance": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiCourtApplicationPartyAttendance.json#"
      }
    },
    "crackedIneffectiveTrial": {
      "description": "Records the description of the reason for a Cracked or Ineffective trial when the hearing is a trial type",
      "$ref": "../../external/global/apiCrackedIneffectiveTrial.json#"
    },
    "isEffectiveTrial": {
      "description": "Identifies a hearing as an effective trial",
      "type": "boolean"
    },
    "isBoxHearing": {
      "description": "Identifies a hearing as a box hearing",
      "type": "boolean"
    },
    "companyRepresentatives": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiCompanyRepresentative.json"
      }
    },
    "isVacatedTrial": {
      "type": "boolean"
    },
    "approvalsRequested": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../../external/global/apiApprovalRequest.json"
      }
    },
    "shadowListedOffences": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/uuid"
      }
    }
  },
  "required": [
    "id",
    "jurisdictionType",
    "courtCentre",
    "type"
  ],
  "additionalProperties": false
}
