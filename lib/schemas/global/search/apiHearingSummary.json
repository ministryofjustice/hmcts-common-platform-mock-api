{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://justice.gov.uk/core/courts/search/external/apiHearingSummary.json",
    "description": "A summary of hearings",
    "type": "object",
    "properties": {
        "hearingId": {
            "description": "The identifier of the hearing",
            "$ref": "../../../external/global/apiCourtsDefinitions.json#/definitions/uuid"
        },
        "jurisdictionType": {
            "description": "The jurisdiction of the hearing",
            "$ref": "../../../external/global/apiCourtsDefinitions.json#/definitions/jurisdictionType"
        },
        "courtCentre": {
            "description": "The court location details for the hearing",
            "$ref": "../../../external/global/apiCourtCentre.json#"
        },
        "hearingType": {
            "description": "The type of hearing that has been listed",
            "$ref": "../../../external/global/apiHearingType.json#"
        },
        "defendantIds": {
            "description": "The identifiers of the defendants that were heard",
            "type": "array",
            "minItems": 1,
            "items": {
             "$ref": "../../../external/global/apiCourtsDefinitions.json#/definitions/uuid"
            }
        },
        "hearingDays": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "sittingDay": {
                  "type": "string"
                },
                "listingSequence": {
                  "type": "integer"
                },
                "listedDurationMinutes": {
                  "type": "integer"
                }
              },
              "required": [
                "sittingDay",
                "listingSequence",
                "listedDurationMinutes"
              ]
            }
        ]
      }
    },
    "required": [
        "hearingId",
        "jurisdictionType",
        "courtCentre",
        "hearingType",
        "defendantIds"
    ],
    "additionalProperties": false
}
