{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/external/apiAttendant.json",
  "type": "object",
  "properties": {
    "attendantType": {
      "type": "string",
      "enum": [
        "DEFENDANTS",
        "WITNESS"
      ]
    },
    "name": {
      "type": "string"
    },
    "defendantId": {
      "$ref": "apicourtsDefinitions.json#/definitions/uuid"
    }
  },
  "oneOf": [
    {
      "required": [
        "attendantType",
        "defendantId"
      ]
    },
    {
      "required": [
        "attendantType",
        "name"
      ]
    }
  ],
  "additionalProperties": false
}