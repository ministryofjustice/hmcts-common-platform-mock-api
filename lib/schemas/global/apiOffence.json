{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://justice.gov.uk/core/courts/external/apiOffence.json",
    "type": "object",
    "properties": {
        "id": {
            "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/uuid"
        },
        "offenceDefinitionId": {
            "description": "The identifier of the offence from reference data",
            "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/uuid"
        },
        "offenceCode": {
            "type": "string"
        },
        "offenceTitle": {
            "type": "string"
        },
        "offenceTitleWelsh": {
            "type": "string"
        },
        "offenceLegislation": {
            "type": "string"
        },
        "offenceLegislationWelsh": {
            "type": "string"
        },
        "modeOfTrial": {
            "type": "string"
        },
        "wording": {
            "type": "string"
        },
        "wordingWelsh": {
            "type": "string"
        },
        "startDate": {
            "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/datePattern"
        },
        "endDate": {
            "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/datePattern"
        },
        "arrestDate": {
            "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/datePattern"
        },
        "chargeDate": {
            "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/datePattern"
        },
        "laidDate": {
            "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/datePattern"
        },
        "dateOfInformation": {
            "description": "The date that the matter is brought to court attention for consideration and for proceeding",
            "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/datePattern"
        },
        "orderIndex": {
            "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/positiveInteger"
        },
        "count": {
            "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/positiveInteger"
        },
        "convictionDate": {
            "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/datePattern"
        },
        "notifiedPlea": {
            "$ref": "../../external/global/apiNotifiedPlea.json"
        },
        "indicatedPlea": {
            "$ref": "../../external/global/apiIndicatedPlea.json"
        },
        "allocationDecision": {
            "$ref": "../../external/global/apiAllocationDecision.json"
        },
        "plea": {
            "$ref": "../../external/global/apiPlea.json"
        },
        "verdict": {
            "$ref": "../../external/global/apiVerdict.json"
        },
        "offenceFacts": {
            "$ref": "../../external/global/apiOffenceFacts.json"
        },
        "aquittalDate": {
            "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/datePattern"
        },
        "victims": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "../../external/global/apiPerson.json#"
            }
        },
        "judicialResults": {
            "description": "A record of any judicial decisions and results made against the offence",
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "../../external/global/apiJudicialResult.json"
            }
        },
        "isDiscontinued": {
            "description": "Determines that the offence has been discontinued by the prosecutor i.e. is no longer being proceeded with",
            "type": "boolean"
        },
        "isIntroduceAfterInitialProceedings": {
            "description": "Determines that the offence has been introduced by the prosecutor after proceeedings have already been initiated",
            "type": "boolean"
        },
        "laaApplnReference": {
            "description": "A record of legal aid applications for this offence",
             "$ref": "../../external/global/apiLaaReference.json"
        },
        "custodyTimeLimit": {
            "description": "The custody time limit for the individual offence when a defendant has been ordered to be remanded in custody",
            "$ref": "../../external/global/apiCustodyTimeLimit.json#"
        },
        "proceedingsConcluded": {
            "description": "Indicates that proceedings for the defendant have been concluded i.e. all offences have been disposed with final results or have been withdrawn by the prosecuting authority",
            "type": "boolean"
        },
        "dvlaOffenceCode": {
          "description": "The code for the offence to be used within the offence wording",
          "type": "string"
        },
        "committingCourt": {
          "description": "Sending court details",
          "$ref": "../../external/global/apiCommittingCourt.json"
        },
        "offenceDateCode": {
          "description": "The code for the offence date to be used within the offence wording, 1 = on or in, 2 = before, 3 = after, 4 = between, 5 = on or about and 6 = on or before",
          "type": "integer",
          "minimum": 1,
          "maximum": 6
        }
    },
    "required": [
        "id",
        "offenceDefinitionId",
        "offenceCode",
        "offenceTitle",
        "wording",
        "startDate"
    ],
    "additionalProperties": false
}
