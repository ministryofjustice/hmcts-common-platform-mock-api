{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/external/apiCourtOrderOffence.json",
  "description": "The details of the offences that were matters that the order was made against",
  "type": "object",
  "properties": {
    "offence": {
      "description": "The details of the offence",
      "$ref": "../../external/global/apiOffence.json"
    },
    "prosecutionCaseId": {
      "description": "The identifier of the case for the offence",
      "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/uuid"
    },
    "prosecutionCaseReference": {
      "description": "The reference (URN or PRN) for the case",
      "type": "string"
    }
  },
  "required": [
    "offence",
    "prosecutionCaseId",
    "prosecutionCaseReference"
  ],
  "additionalProperties": false
}
