{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/public/notifiedPlea.json",
  "description": "The plea notified by the defendant via online plea",
  "type": "object",
  "properties": {
    "offenceId": {
      "$ref": "courtsDefinitions.json#/definitions/uuid"
    },
    "notifiedPleaDate": {
      "$ref": "courtsDefinitions.json#/definitions/datePattern"
    },
    "notifiedPleaValue": {
      "type": "string",
      "enum": [
        "NOTIFIED_GUILTY",
        "NOTIFIED_NOT_GUILTY",
        "NO_NOTIFICATION"
      ]
    }
  },
  "required": [
    "offenceId",
    "notifiedPleaDate",
    "notifiedPleaValue"
  ],
  "additionalProperties": false
}