{
	 "$schema": "http://json-schema.org/draft-04/schema#",
	 "id": "http://justice.gov.uk/core/courts/public/hearing.json",
	 "type": "object",
	 "properties": {
		 "id": {
			 "$ref": "courtsDefinitions.json#/definitions/uuid"
		},
		 "jurisdictionType": {
			 "$ref": "courtsDefinitions.json#/definitions/jurisdictionType"
		},
		 "reportingRestrictionReason": {
			 "type": "string"
		},
		 "courtCentre": {
			 "$ref": "courtCentre.json#"
		},
		 "hearingLanguage": {
			 "$ref": "courtsDefinitions.json#/definitions/hearingLanguage"
		},
		 "prosecutionCases": {
			 "description": "The collection of cases to be heard or the case for a linked application with respect to an application hearing",
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "prosecutionCase.json#"
			}
		},
		 "hasSharedResults": {
			 "description": "Indicates that the hearing has at least one result shared",
			 "type": "boolean"
		 },
		 "courtApplications": {
			 "description": "The collection of applications to be heard with respect to an application hearing or the applications for a case with respect to a hearing related to the case",
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "courtApplication.json#"
			}
		},
		 "defendantReferralReasons": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "referralReason.json#"
			}
		},
		 "hearingCaseNotes": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "hearingCaseNote.json#"
			}
		},
		 "type": {
			 "$ref": "hearingType.json#"
		 },
		 "hearingDays": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "hearingDay.json#"
			 }
		 },
		 "judiciary": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "judicialRole.json#"
			 }
		 },
		 "applicantCounsels": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "applicantCounsel.json#"
			 }
		 },
		 "respondentCounsels": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "respondentCounsel.json#"
			 }
		 },
		 "prosecutionCounsels": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "prosecutionCounsel.json#"
			 }
		 },
		 "defenceCounsels": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "defenceCounsel.json#"
			 }
		 },
		 "applicationPartyCounsels": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "courtApplicationPartyCounsel.json#"
			 }
		 },
		 "defendantAttendance": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "defendantAttendance.json#"
			 }
		 },
		 "defendantHearingYouthMarkers": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "defendantHearingYouthMarker.json#"
			 }
		 },
		 "courtApplicationPartyAttendance": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "courtApplicationPartyAttendance.json#"
			 }
		 },
		 "crackedIneffectiveTrial": {
		 	 "description": "Records the description of the reason for a Cracked or Ineffective trial when the hearing is a trial type",
			 "$ref": "crackedIneffectiveTrial.json#"
		 },
		 "isEffectiveTrial": {
			 "description": "Identifies a hearing as an effective trial",
			 "type": "boolean"
		 },
		 "isBoxHearing": {
			 "description": "Identifies a hearing as a box hearing",
			 "type": "boolean"
		 }
	},
	 "required": [
		"id",
		"jurisdictionType",
		"courtCentre",
        "type",
        "hearingDays"
	],
	 "additionalProperties": false
}