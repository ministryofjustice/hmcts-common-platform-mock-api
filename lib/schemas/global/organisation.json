{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/public/organisation.json",
  "type": "object",
  "properties": {
    "name": {
	  "description": "The name of the organisation",
      "type": "string"
    },
    "incorporationNumber": {
      "description": "The incorporation details of teh organisationorganisation",
      "type": "string"
    },
    "registeredCharityNumber": {
      "description": "The registered charity details",
      "type": "string"
    },
    "address": {
      "description": "The organisation address details",
      "$ref": "address.json"
    },
    "contact": {
      "description": "The organisation contact details",
      "$ref": "contactNumber.json"
    }
  },
  "required": [
    "name"
  ],
  "additionalProperties": false
}