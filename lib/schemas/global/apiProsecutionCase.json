{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://justice.gov.uk/core/courts/external/apiProsecutionCase.json",
    "description": "The details of the prosecution matter brought before court",
    "type": "object",
    "properties": {
        "id": {
            "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/uuid"
        },
        "prosecutionCaseIdentifier": {
            "$ref": "../../external/global/apiProsecutionCaseIdentifier.json"
        },
        "originatingOrganisation": {
            "type": "string"
        },
        "initiationCode": {
            "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/initiationCode"
        },
        "caseStatus": {
            "description": "The status of the case.  When SJP Referrals are received or when court proceedings are initialised this will be set to ACTIVE by the receiving Progression API",
            "type": "string"
        },
        "policeOfficerInCase": {
            "$ref": "../../external/global/apiPoliceOfficerInCase.json#"
        },
        "statementOfFacts": {
            "type": "string"
        },
        "statementOfFactsWelsh": {
            "type": "string"
        },
        "breachProceedingsPending": {
            "type": "boolean"
        },
        "appealProceedingsPending": {
            "type": "boolean"
        },
        "defendants": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "../../external/global/apiDefendant.json"
            }
        },
        "caseMarkers": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "../../external/global/apiMarker.json#"
            }
        }
    },
    "required": [
        "id",
        "prosecutionCaseIdentifier",
        "initiationCode",
        "defendants",
        "caseStatus"
    ],
    "additionalProperties": false
}
