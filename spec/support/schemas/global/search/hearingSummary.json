{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://justice.gov.uk/core/courts/search/public/hearingSummary.json",
	"description": "A summary of hearings",
	"type": "object",
	"properties": {
		"hearingId": {
			"description": "The identifier of the hearing",
			"$ref": "../../global/courtsDefinitions.json#/definitions/uuid"
		},
		"jurisdictionType": {
			"description": "The jurisdiction of the hearing",
			"$ref": "../../global/courtsDefinitions.json#/definitions/jurisdictionType"
		},
		"courtCentre": {
			"description": "The court location details for the hearing",
			"$ref": "../../global/courtCentre.json#"
		},
		"type": {
			"description": "The type of hearing that has been listed",
			"$ref": "../../global/hearingType.json#"
		},
		"defendants": {
			"description": "The identifiers of the defendants that were heard",
			"type": "array",
			"minItems": 1,
			"items": {
			 "$ref": "../../global/courtsDefinitions.json#/definitions/uuid"
			}
		}
	},
	"required": [
		"hearingId",
		"jurisdictionType",
		"courtCentre",
		"type",
		"defendants"
	],
	"additionalProperties": false
}