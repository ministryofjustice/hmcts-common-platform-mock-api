{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://justice.gov.uk/core/courts/public/nextHearing.json",
	"type": "object",
	"properties": {
		"type": {
			 "$ref": "hearingType.json#"
		},
		"jurisdictionType": {
			 "$ref": "courtsDefinitions.json#/definitions/jurisdictionType"
		},
		"reportingRestrictionReason": {
			"type": "string"
		},
		"adjournmentReason": {
			"type": "string"
		},
		"hearingLanguage": {
			 "$ref": "courtsDefinitions.json#/definitions/hearingLanguage"
		},
		"listedStartDateTime": {
			"description": "The date and time that has been pre-arranged and therefore must be listed accordingly.  Since the Police grant bail, Police requests will arrive at court with a pre-agreed date and time as per the bail arrangements.  Similarly adjournments will result in a pre-arranged date and time",
			 "type": "string",
			 "format": "date-time"
		},
		"estimatedMinutes": {
			 "$ref": "courtsDefinitions.json#/definitions/positiveInteger"
		},
		"courtCentre": {
			 "$ref": "courtCentre.json#"
		},
		"judiciary": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "judicialRole.json#"
			}
		},
		"nextHearingProsecutionCases": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "nextHearingProsecutionCase.json#"
			}
		},
		"nextHearingCourtApplicationId": {
			 "type": "array",
			 "minItems": 1,
			 "items": {
				 "$ref": "courtsDefinitions.json#/definitions/uuid"
			}
		}
	},
	 "required": [
		"type",
		"courtCentre",
		"estimatedMinutes",
		"listedStartDateTime"
	],
	 "additionalProperties": false
}