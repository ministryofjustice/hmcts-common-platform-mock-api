{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://justice.gov.uk/core/courts/external/apiprosecutionCase.json",
	"description": "The details of the prosecution matter brought before court",
	"type": "object",
	"properties": {
		"id": {
			"$ref": "apiCourtsDefinitions.json#/definitions/uuid"
		},
		"prosecutionCaseIdentifier": {
			"$ref": "apiprosecutionCaseIdentifier.json"
		},
		"originatingOrganisation": {
			"type": "string"
		},
		"initiationCode": {
			"$ref": "apiCourtsDefinitions.json#/definitions/initiationCode"
		},
		"caseStatus": {
			"description": "The status of the case.",
			"type": "string"
		},
		"policeOfficerInCase": {
			"$ref": "apipoliceOfficerInCase.json#"
		},
		"statementOfFacts": {
			"type": "string"
		},
		"statementOfFactsWelsh": {
			"type": "string"
		},
		"breachProceedingsPending": {
			"type": "boolean"
		},
		"removalReason": {
			"type": "string"
		},
		"appealProceedingsPending": {
			"type": "boolean"
		},
		"defendants": {
			"type": "array",
			"minItems": 1,
			"items": {
				"$ref": "apidefendant.json"
			}
		},
		"caseMarkers": {
			"type": "array",
			"minItems": 1,
			"items": {
				"$ref": "apimarker.json#"
			}
		},
		"splitProsecutorCaseReferences": {
			"description": "When this case has been split based on the decision of a prosecutor, indicates the parts of the split and the prosecutor refernces that are now are provided",
			"type": "array",
			"minItems": 2,
			"items": {
				"type": "string"
			}
		},
		"mergedProsecutionCase": {
			"description": "When this case has been merged based on a prosecutor decision, the details of the targets of the merge",
			"$ref": "../global/apimergedProsecutionCase.json#"
		},
		"linkedProsecutionCases": {
			"description": "Linking cases is an HMCTS decision.  This structure provides the collection of the other cases that are linked to this case",
			"type": "array",
			"minItems": 1,
			"items": {
				"$ref": "apiCourtsDefinitions.json#/definitions/uuid"
			}
		}
	},
	"required": [
		"id",
		"prosecutionCaseIdentifier",
		"initiationCode",
		"defendants",
		"caseStatus"
	],
	"additionalProperties": false
}