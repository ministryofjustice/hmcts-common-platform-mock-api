{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/core/courts/external/apiCourtApplicationCase.json",
  "description": "The details of any cases that are linked to a court application",
  "type": "object",
  "properties": {
    "prosecutionCaseId": {
      "$ref": "../../external/global/apiCourtsDefinitions.json#/definitions/uuid"
    },
    "prosecutionCaseReference": {
      "description": "The URN or PRN of the case",
      "type": "string"
    },
    "offences": {
      "description": "The details of teh offences that are being dealt with/considered as part of this application",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "apiCourtApplicationOffence.json#"
      }
    }
  },
  "required": [
    "prosecutionCaseId",
    "prosecutionCaseReference"
  ],
  "additionalProperties": false
}
