{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Identifies the attendance of an applicant or respondent at an application hearing",
  "id": "http://justice.gov.uk/core/courts/public/courtApplicationPartyAttendance.json",
  "type": "object",
  "properties": {
    "courtApplicationPartyId": {
      "$ref": "courtsDefinitions.json#/definitions/uuid"
    },
    "attendanceDays": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "attendanceDay.json"
      }
    }
  },
  "required": [
    "courtApplicationPartyId",
    "attendanceDays"
  ],
  "additionalProperties": false
}